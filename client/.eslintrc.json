{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["src/**/*.{js, jsx}"],
            "excludedFiles": [
                "*.config.js"
            ]
        }
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", "tab"],
        "react/props-types": ["off"]
    }
}
